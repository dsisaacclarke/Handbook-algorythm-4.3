#include <iostream>
#include <vector>

int main() {
    
    int n;
    std::cin >> n;

    if (n < 3) {
        std::cout << "No" << "\n";
        return 0;
    }

    std::cout << "Yes" << "\n";
    
    std::vector<int> result(n);
    result[0] = n;
    result[1] = 1;
    
    for (int i = 2; i < n; ++i) {
        result[i] = i;
    }

    for (int i = 0; i < n; ++i) {
        std::cout << result[i] << (i == n - 1 ? "" : " ");
    }
}
